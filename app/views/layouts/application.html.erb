<!DOCTYPE html>
<html>
<head>
  <title>Adrian College Geo</title>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
  <script src="http://js.pusher.com/1.11/pusher.min.js"></script>
  <%= csrf_meta_tags %>

  <script type="text/javascript">

    $(function() {
      /*
      $("#map").gmap3({
        action: 'init',
        options:{
          center:[41.896761,-84.062065],
          zoom:15
        }
      });
      */
      $("#map").gmap3({
        action: 'init',
        options:{
          center:[37.60315,-122.189004],
          zoom:10,
          disableDefaultUI:true
        }
      });

      <% if @positions %>
        <% @positions.each do |position| %>
          $('#map').gmap3({
            action: 'addMarker',
            latLng:[<%= position.latitude %>,<%= position.longitude %>],
            tag:'<%= position.uid %>',
            options:{
              animation: google.maps.Animation.DROP,
              icon: new google.maps.MarkerImage('<%= User.find_by_uid(position.uid).image %>', new google.maps.Size(20, 20), new google.maps.Point(0,0), new google.maps.Point(0, 32), new google.maps.Size(25, 25))
            },
            events:{
              mouseover: function(marker){
                $("#<%= position.uid %>").css("background", "#fff6d1");
              },
              mouseout: function() {
                $("#<%= position.uid %>").css("background", "");
              }
            }
          });
        <% end %>
      <% end %>

      $("#share").click(initiate_geolocation);  
    });
  </script>

  <style type="text/css">
    #map {
      width:100%; 
      height:500px;
    }
  </style>

</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="brand" href="#">Adrian College Geo</a>
        <div>
          <% if current_user %>
            <p class="navbar-text pull-right"><%= current_user.name %>&nbsp;&nbsp;<%= link_to "Sign Out", signout_path %></p>
          <% end %>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row-fluid">
      <%= yield %>
    </div><!--/row-->

    <hr>

    <footer>
      <p>&copy; Prime 2012</p>
    </footer>

  </div><!--/.fluid-container-->

</body>
</html>
